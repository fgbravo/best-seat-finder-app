<div id="requested_seats" class="section hidden" data-controller="validation">
  <div class="section-header">
    <h2 class="section-title is-size-2-desktop is-size-2-tablet is-size-2-mobile">How many seats do you need?</h2>
  </div>
  <div class="section-body">
    <div class="input-holder">
      <input type="number" name="requested_seats" id="requested_seats_number" data-target="validation.input" data-action="change->validation#enableButton" required>
      <label for="requested_seats_number">Requested Seats</label>
    </div>
  </div>
  <div class="section-footer">
    <button type="submit" class="btn btn-next" data-target="validation.button" disabled>Submit</button>
  </div>
</div>